import { Constants } from "constants.slint";

export component Deck {
    in property <string> name;

    in property <int> new;
    in property <int> learn;
    in property <int> due;

    HorizontalLayout {
        alignment: start;
        padding-top: Constants.padding_standard;
        TouchArea {
            Image {
                source: @image-url("./icons/angle_right.svg");
            }

            clicked => {
            }
        }

        Text {
            text: name;
            font-size: Constants.font_size_content;
            vertical-alignment: center;
        }
    }

    HorizontalLayout {
        alignment: end;
        padding-top: Constants.padding_standard;
        spacing: 5px;

        Text {
            text: new;
            color: #808080;
            font-size: Constants.font_size_subcontent;
            vertical-alignment: center;
        }

        Text {
            text: learn;
            color: #808080;
            font-size: Constants.font_size_subcontent;
            vertical-alignment: center;
        }

        Text {
            text: due;
            color: #008000;
            font-size: Constants.font_size_subcontent;
            vertical-alignment: center;
        }
    }
