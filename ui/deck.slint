import { HorizontalBox } from "std-widgets.slint";

// TODO: Center the text contents vertucally (maybe using the Image height as refernce)

export component Deck {
    in property <string> name;

    in property <int> new;
    in property <int> learn;
    in property <int> due;

    HorizontalLayout {
        alignment: start;
        padding: 20px;
        TouchArea {
            img := Image {
                source: @image-url("./icons/angle_right.svg");
            }

            clicked => {
            }
        }

        Text {
            y: img.height / 2 - self.height / 2;
            text: name;
            font-size: 20px;
        }
    }

    HorizontalLayout {
        alignment: end;
        padding: 20px;
        spacing: 5px;

        Text {
            y: img.height / 2 - self.height / 2;
            text: new;
            color: #808080;
            font-size: 15px;
        }

        Text {
            y: img.height / 2 - self.height / 2;
            text: learn;
            color: #808080;
            font-size: 15px;
        }

        Text {
            y: img.height / 2 - self.height / 2;
            text: due;
            color: #008000;
            font-size: 15px;
        }
    }
}
